<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user1.deafaidrec.MainActivity">

    <TextView
        android:id="@+id/lineChart0t"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text="\n"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart1"
        android:layout_width="409dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/lineChart0t"
        tools:layout_editor_absoluteX="1dp" >
    </com.github.mikephil.charting.charts.LineChart>
    <TextView
        android:id="@+id/lineChart1t"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text="\n"
        app:layout_constraintTop_toBottomOf="@+id/lineChart1"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart2"
        android:layout_width="409dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/lineChart1t"
        tools:layout_editor_absoluteX="1dp" >
    </com.github.mikephil.charting.charts.LineChart>
    <TextView
        android:id="@+id/lineChart2t"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text="\n"
        app:layout_constraintTop_toBottomOf="@+id/lineChart2"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart3"
        android:layout_width="409dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/lineChart2t"
        tools:layout_editor_absoluteX="1dp" >
    </com.github.mikephil.charting.charts.LineChart>
    <TextView
        android:id="@+id/lineChart3t"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text="\n"
        app:layout_constraintTop_toBottomOf="@+id/lineChart3"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart4"
        android:layout_width="409dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/lineChart3t"
        tools:layout_editor_absoluteX="1dp" >
    </com.github.mikephil.charting.charts.LineChart>
    <TextView
        android:id="@+id/allValue"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="\n01Values: "
        app:layout_constraintTop_toBottomOf="@+id/lineChart4"/>

