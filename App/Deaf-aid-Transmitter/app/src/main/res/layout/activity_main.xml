<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Choose your receiving device:"
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:spinnerMode="dialog"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/choose"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/DeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Google Pixel 4"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner1"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/ResonantFre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Resonant frequency: 23.1 kHz"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/DeviceName"
        tools:layout_editor_absoluteX="63dp" />

    <TextView
        android:id="@+id/textmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Edit your message here (0 or 1 only):"
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/msg"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="10101"
        app:layout_constraintBottom_toTopOf="@id/Transmit"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/Transmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Transmitting"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>